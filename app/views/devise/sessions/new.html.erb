<div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 box-border">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="head"><strong>Log In</strong></h2>
       
        <div class="field">
          <%= f.label :email %><br />
          <%= f.input :email, autofocus: true, label: false %>
        </div>
    
        <div class="field">
          <%= f.label :password %><br />
          <%= f.input :password, autocomplete: "off", label: false %>
        </div>
    
        <% if devise_mapping.rememberable? %>
        <div class="field">
          &nbsp<%= f.input :remember_me ,as: :boolean, label:'Remember Me'%>
        </div>
        <% end %>
    
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>    
</div>